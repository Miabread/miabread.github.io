---
import BaseLayout from '../components/BaseLayout.astro';
---

<BaseLayout>
    <div class="grid grid-cols-5 gap-10 border-gray-200 dark:border-gray-600 p-10 border-10 rounded-xl drop-shadow-xl">
        {
            [...Array(15).keys()].map((i) => (
                <div
                    class="w-40 h-40 p-5 rounded-xl drop-shadow-xl"
                    style={'background-color: #' + (((1 << 24) * Math.random()) | 0).toString(16).padStart(6, '0')}
                >
                    <h1>Test content => {i}</h1>
                </div>
            ))
        }
    </div>
</BaseLayout>
