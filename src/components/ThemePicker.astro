---
import IconThemeSystem from '~icons/mdi/theme-light-dark';
import IconThemeDark from '~icons/mdi/weather-night';
import IconThemeLight from '~icons/mdi/weather-sunny';
---

<script>
    import { getTheme, setTheme } from '../scripts/theme';

    for (const theme of ['system', 'dark', 'light'] as const) {
        const button = document.getElementById(theme) as HTMLInputElement;
        button.addEventListener('click', () => setTheme(theme));
        if (theme === getTheme()) button.checked = true;
    }
</script>

<div>
    <div>
        <input type="radio" name="theme" id="system" value="system" />
        <label for="system">
            System
            <IconThemeSystem class="inline" />
        </label>
    </div>
    <div>
        <input type="radio" name="theme" id="dark" value="dark" />
        <label for="dark">
            Dark
            <IconThemeDark class="inline" />
        </label>
    </div>
    <div>
        <input type="radio" name="theme" id="light" value="light" />
        <label for="light">
            Light
            <IconThemeLight class="inline" />
        </label>
    </div>
</div>
